    SupportedOrientations="Portrait" Orientation="Portrait"
    mc:Ignorable="d"
    shell:SystemTray.IsVisible="True">
    <Grid>
        <StackPanel>
            <StackPanel.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="/Assets/Images/golden-dew-drops-on-the-grass-23612-1680x1050.jpg"/>
            </StackPanel.Background>
            <TextBlock TextWrapping="Wrap" Text="About" Height="60" FontSize="40" Margin="20"/>
            <TextBlock TextWrapping="Wrap" Text="Bangladesh, a country, once famous for her cottage industry worldwide, however, has lost her cultural heritage and pride by the course of time. This app gives info about some of our popular cottage industries which still have the possibility of reviving our economy.
                       
                       
                       Developed by: Sarah Tabassum" Margin="20" Height="593" FontSize="25"/>


        </StackPanel>
